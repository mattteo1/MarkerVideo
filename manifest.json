{
    "manifest_version": 3,
    "name": "MarkerVideo",
    "version": "1.0.0",
    "description": "Saving timestamp in YT videos",
    "icons": {
        "16": "icons/icona16.png",
        "32": "icons/icona32.png",
        "48": "icons/icona48.png",
        "128": "icons/icona128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "sidePanel"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://www.youtube.com/*",
                "https://youtube.com/*"
            ]
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "MarkerVideo"
    }
}